<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg">
    <RelativeLayout
        android:id="@+id/relative_main_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <TextView
        android:id="@+id/contact_main_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:gravity="center"
        android:text="@string/add_contact"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"/>
    </RelativeLayout>
    <View
        android:id="@+id/view1Contact"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_below="@id/relative_main_tv"
        android:background="#AC8F8F"/>
   <ScrollView
       android:layout_below="@id/relative_main_tv"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/contact_name_TXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/vendorName"
            android:textSize="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_20sdp"/>
        <EditText
            android:id="@+id/contact_name_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/contact_name_TXT"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:lines="1"
            android:layout_marginStart="@dimen/_58sdp"
            android:background="@drawable/edittext_border"
            android:hint="@string/enter_here"/>
        <TextView
            android:id="@+id/contact_number_TXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mobile_number"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_below="@id/contact_name_TXT"
            android:layout_marginStart="@dimen/_20sdp"/>
        <EditText
            android:id="@+id/contact_number_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/contact_number_TXT"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:inputType="number"
            android:lines="1"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_below="@id/contact_name_TXT"
            android:background="@drawable/edittext_border"
            android:hint="@string/enter_here"/>

        <View
            android:id="@+id/contact_view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_below="@id/contact_number_TXT"
            android:background="#AC8F8F"/>
        <Button
            android:id="@+id/add_contact_button"
            android:layout_below="@id/contact_view_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:layout_centerHorizontal="true"
            android:background="#8B5398"
            android:text="@string/add"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_15sdp"/>
    </RelativeLayout>
   </ScrollView>
</RelativeLayout>