<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg">
    <RelativeLayout
        android:id="@+id/relative_notice_main_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <TextView
        android:id="@+id/notice_main_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:text="@string/add_notice"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"/>
    </RelativeLayout>
    <View
        android:id="@+id/view1Notice"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_below="@id/relative_notice_main_tv"
        android:background="#AC8F8F"/>
    <ScrollView
        android:layout_below="@id/view1Notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/notice_title_TXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/notice_title"
            android:textSize="@dimen/_12sdp" />
        <EditText
            android:id="@+id/notice_title_editText"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_27sdp"
            android:lines="1"
            android:inputType="textMultiLine|textCapSentences"
            android:background="@drawable/edittext_border"
            android:layout_toRightOf="@id/notice_title_TXT"
            android:hint="Title"/>
        <TextView
            android:id="@+id/applicableTo_TXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/applicable_to"
            android:textSize="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_below="@id/notice_title_TXT"
            android:layout_marginTop="@dimen/_20sdp" />
        <EditText
            android:id="@+id/applicableTo_editText"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_13sdp"
            android:lines="1"
            android:inputType="textMultiLine|textCapSentences"
            android:background="@drawable/edittext_border"
            android:layout_toRightOf="@id/applicableTo_TXT"
            android:layout_below="@id/notice_title_editText"
            android:hint="@string/enter_here"/>
        <TextView
            android:id="@+id/notice_description_TXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/descriptionCardView"
            android:textSize="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_below="@id/applicableTo_TXT"/>
        <EditText
            android:id="@+id/notice_description_editText"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_27sdp"
            android:lines="4"
            android:inputType="textMultiLine|textCapSentences"
            android:background="@drawable/edittext_border"
            android:layout_below="@id/applicableTo_editText"
            android:layout_toRightOf="@id/notice_description_TXT"
            android:hint="@string/description"/>
        <View
        android:id="@+id/viewNotice"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_below="@id/notice_description_editText"
        android:background="#AC8F8F"/>
    <Button
        android:id="@+id/confirm_notice_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:layout_below="@id/viewNotice"
        android:layout_centerHorizontal="true"
        android:text="@string/add_notice"
        android:textSize="@dimen/_15sdp"
        android:background="#82C13F"
        android:textColor="@color/colorWhite"
        />
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>