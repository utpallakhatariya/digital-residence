<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg">

    <RelativeLayout
        android:id="@+id/relative_booking_main_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/booking_main_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:text="@string/book_now"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"/>
    </RelativeLayout>
    <View
        android:id="@+id/view1Booking"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_below="@id/relative_booking_main_tv"
        android:background="#AC8F8F"/>
    <ScrollView
        android:layout_below="@id/relative_booking_main_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/booking_of_TXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="@string/booking_of"
                android:textSize="@dimen/_12sdp" />
            <EditText
                android:id="@+id/booking_of_editText"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:lines="1"
                android:inputType="textMultiLine|textCapSentences"
                android:background="@drawable/edittext_border"
                android:layout_toRightOf="@id/booking_of_TXT"
                android:hint="@string/enter_here"/>
            <TextView
                android:id="@+id/booking_for_TXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="@string/booking_for"
                android:layout_below="@id/booking_of_TXT"
                android:textSize="@dimen/_12sdp" />
            <EditText
                android:id="@+id/booking_for_editText"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_below="@id/booking_of_editText"
                android:lines="1"
                android:inputType="textMultiLine|textCapSentences"
                android:background="@drawable/edittext_border"
                android:layout_toRightOf="@id/booking_of_TXT"
                android:hint="@string/enter_here"/>
            <TextView
                android:id="@+id/booking_description_TXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_below="@id/booking_for_TXT"
                android:text="@string/descriptionCardView"
                android:textSize="@dimen/_12sdp" />
            <EditText
                android:id="@+id/booking_description_editText"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:lines="4"
                android:inputType="textMultiLine|textCapSentences"
                android:background="@drawable/edittext_border"
                android:layout_toRightOf="@id/booking_for_TXT"
                android:layout_below="@id/booking_for_editText"
                android:hint="@string/description"/>



            <LinearLayout
                android:id="@+id/booking_date_time_linear"
                android:layout_width="wrap_content"
                android:layout_below="@id/booking_description_editText"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/booking_date_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_25sdp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/booking_date_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_32sdp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_15sdp"
                    />
                <TextView
                    android:id="@+id/booking_time_from_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_42sdp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_15sdp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:text="@string/to"
                    android:layout_marginStart="@dimen/_37sdp"
                    android:layout_marginBottom="@dimen/_13sdp"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:id="@+id/booking_time_to_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_15sdp"
                    />

            </LinearLayout>
                <LinearLayout
                    android:id="@+id/booking_time_from_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_25sdp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/booking_date_btn"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:text="@string/select_date"
                        android:textColor="@color/colorBlack"
                        />

                    <Button
                        android:id="@+id/booking_time_from_btn"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:text="@string/select_time"
                        android:textColor="@color/colorBlack"
                        />
                    <Button
                        android:id="@+id/booking_time_to_btn"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:text="@string/select_time"
                        android:textColor="@color/colorBlack"
                        />
                </LinearLayout>
            </LinearLayout>
            <View
                android:id="@+id/viewBooking"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_below="@id/booking_date_time_linear"
                android:background="#AC8F8F"/>
            <Button
                android:id="@+id/confirm_booking_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp"
                android:layout_below="@id/viewBooking"
                android:layout_centerHorizontal="true"
                android:text="@string/confirm_booking"
                android:textSize="@dimen/_15sdp"
                android:background="#82C13F"
                android:textColor="@color/colorWhite"
                />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>





